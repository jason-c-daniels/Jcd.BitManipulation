#!/bin/sh
returnd="$(pwd)"
cd "$(git rev-parse --show-toplevel)" || exit
echo finding files
find . -type f -name '*.md'
echo editing files
find . -type f -name '*.md' -exec sed -i -E 's/[ ]+$//g' {} \;
find . -type f -name '*.md' -exec sed -i -E 's:[\<]br[/][\>]: :g' {} \;
cd ./docs || exit
find . -type f -name '*.md' -exec sed -i -Ee "s/[.]md( .Jcd)/\1/g" {} \;
cd .. || exit
find . -type f -name '*.md' -print0 | xargs -0 unix2dos
cd "$returnd" || exit